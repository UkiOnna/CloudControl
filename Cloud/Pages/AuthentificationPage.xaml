<Page x:Class="Cloud.Pages.AuthentificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cloud.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AuthentificationPage" Name="autPage">

    <Grid Background="#FF34D17B">
        <TextBlock HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" Text="Login: " VerticalAlignment="Top" FontSize="14"/>
        <TextBox Name="login" HorizontalAlignment="Left" Height="23" Margin="80,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap" Text="Password: " VerticalAlignment="Top" FontSize="14"/>
        <TextBox Name="password" HorizontalAlignment="Left" Height="23" Margin="80,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="75" Click="EnterClick"/>
        <Button Content="Registration" HorizontalAlignment="Left" Margin="201,175,0,0" VerticalAlignment="Top" Width="75" Click="RegistrationClick"/>

    </Grid>
</Page>
